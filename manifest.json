{
    "manifest_version": 2,

    "name": "Bangla Banan",
    "description": "This extension lets you check if a Bangla/Bengali word is spelled correctly.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "<all_urls>",
        "activeTab"
    ],

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"

}
